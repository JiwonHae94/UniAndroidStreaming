<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="50mm"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <EditText
        android:id="@+id/polling_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Ask a question..."
        android:textColorHint="#acacac"
        android:background="@null"
        android:padding="2mm"
        android:textSize="18dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8mm"
        android:id="@+id/polling_main_layout"
        android:orientation="horizontal"
        android:paddingRight="3mm"
        android:paddingLeft="3mm">

        <EditText
            android:id="@+id/polling_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="YES"
            android:background="@drawable/poll_yes"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#d2d1d1"/>

        <EditText
            android:id="@+id/polling_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="NO"
            android:background="@drawable/poll_no"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>