<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jiwon_hae.streaming_application.account.create_account_login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4mm"
        android:text="로그인"
        android:textSize = "11dp"
        android:textColor = "#b4b4b4"
        android:layout_marginLeft="2mm"
        android:gravity="bottom"
        android:layout_gravity="bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="2mm">

        <TextView
            android:layout_width="2mm"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text='이메일'
            android:textSize="12dp"
            android:textColor="#000000"
            android:minWidth="10mm"/>

        <EditText
            android:id="@+id/login_email"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="이메일"
            android:textSize="12dp"
            android:layout_marginLeft="1mm"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="2mm">

        <TextView
            android:layout_width="2mm"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text='비밀번호'
            android:textSize="12dp"
            android:textColor="#000000"
            android:minWidth="10mm"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="비밀번호"
            android:textSize="12dp"
            android:layout_marginLeft="1mm"
            android:inputType="textPassword"/>

    </LinearLayout>

    <Button
        android:id="@+id/create_acc_login"
        android:background = "@color/white"
        android:elevation="5mm"
        android:layout_width="50mm"
        android:layout_height="6mm"
        android:layout_margin="1mm"
        android:layout_marginTop="3mm"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="로그인"
        android:textSize="11dp"/>

    <Button
        android:id="@+id/create_account"
        android:background = "@color/white"
        android:elevation="5mm"
        android:layout_width="50mm"
        android:layout_height="6mm"
        android:layout_margin="1mm"
        android:layout_marginTop="3mm"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="11dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.7"/>

</LinearLayout>