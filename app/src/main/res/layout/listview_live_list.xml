<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50mm"
    android:id="@+id/stream">

    <ImageView
        android:id="@+id/streamer_cover_image"
        android:layout_width="match_parent"
        android:layout_height="50mm"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/streamer_current_viewer"
        android:layout_width = "wrap_content"
        android:layout_height="3mm"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_margin="1mm"
        android:minWidth="7mm"
        android:background="@drawable/round_div">

        <ImageView
            android:id="@+id/streamer_viewer_count_icon"
            android:layout_width="2.5mm"
            android:layout_height="2.5mm"
            android:layout_marginRight="0.2mm"
            android:layout_marginLeft="1.3mm"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/streamer_viewer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="#78000000">

        <TextView
            android:id="@+id/stream_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:padding="0.5mm"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0.5mm">

            <TextView
                android:id="@+id/streamer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/stream_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1mm"
                android:textSize="11dp"
                android:textColor="#e1e1e1"/>

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>